<!DOCTYPE html>
<html lang="ch">

<head>
	<meta charset="UTF-8">
	<HTA:Application icon="logo.ico" scroll="no" />
	<title>|简·陋|多窗口 - 开发文档</title>
	<script type="text/vbscript">
		me.resizeTo 1000, 500
	</script>
	<script type="text/javascript">
		TextObject = {
			"欢迎": "感谢您使用 |简·陋| HTA磁吸多窗口模板！<br />"
		};
		window.onload = function () {
			sc_manual_index.width = 100;
			sc_manual_index.timer = null;
			document.onmousemove = function (event) {
				event = event || window.event;
				var ele = sc_manual_index;
				if (event.clientX <= ele.width / 2) {
					if (ele.width == 100) {
						clearInterval(ele.timer);
						ele.timer = setInterval(function () {
							if (ele.width == 500) return clearInterval(ele.timer);
							ele.width += 50;
							ele.style.width = ele.width / 2 + "px";
						}, 1);
					}
				} else if (ele.width != 100) {
					clearInterval(ele.timer);
					ele.timer = setInterval(function () {
						if (ele.width == 100) return clearInterval(ele.timer);
						ele.width -= 50;
						ele.style.width = ele.width / 2 + "px";
					}, 1);
				}
			};
			sc_manual_index_box.style.height = (sc_manual_index.offsetHeight - sc_manual_index_title.offsetHeight - 30) + "px";
		};
	</script>
	<style>
		* {
			padding: 0;
			margin: 0;
		}

		#sc_manual_index {
			position: fixed;
			left: 0;
			top: 0;
			bottom: 0;
			width: 50px;
			background: #333;
			color: #fff;
			overflow: hidden;
			filter: progid:DXImageTransform.Microsoft.Shadow(Strength=5, Direction=90, Color='#777777');
		}

		#sc_manual_index_title {
			position: relative;
			left: 5px;
			top: 5px;
			font-size: 25px;
			white-space: nowrap;
		}

		#sc_manual_index_box {
			overflow: auto;
			width: 200px;
			margin-left: 50px;
			border-left: #fff;
		}

		#sc_manual_index ul {
			margin-left: 20px;
			list-style: none;
			background: #333;
		}

		#sc_manual_index li {
			background: aqua;
		}

		.sc_manual_index_ul_fold {

		}

		#sc_manual_box {
			position: absolute;
			top: 0;
			left: 50px;
			right: 0;
			bottom: 0;
			overflow: auto;
		}

		#sc_manual_main {
			position: relative;
			margin: 10px;
		}
	</style>
</head>

<body>
	<div id="sc_manual_box">
		<div id="sc_manual_main">
			<h1>hhhhh</h1>
